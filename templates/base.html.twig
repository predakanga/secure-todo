<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Secure Todo{% if block('title') is defined %} - {{ block('title') }}{% endif %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fontsource/roboto@5.0.8/400.css" integrity="sha256-wLXr2sltUQyD54P4R2M19lmqHXz1PXqeL0vfJZEzSxY=" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}

    <meta name="theme-color" content="#712cf9">
</head>
<body>
<div class="col-lg-8 mx-auto p-4 py-md-5">
    <header class="d-flex align-items-center pb-3 mb-5 border-bottom">
        <a href="/" class="d-flex align-items-center text-body-emphasis text-decoration-none">
            <span class="fs-4">Secure Todo</span>
        </a>
    </header>

    <main>
        {% block body %}
        {% endblock %}
    </main>
    <footer class="pt-3 my-1 text-body-secondary border-top">
        &copy; AJLK Security 2023
    </footer>
</div>
</body>
</html>
