{% extends 'base.html.twig' %}

{% block body %}
<h1>Todo: {{ item.title | raw }}</h1>
<div class="container py-3">
    <div class="row m-1">
        <div class="col-2 h5">Due date</div>
        <div class="col">{{ item.dueBy | date }}</div>
    </div>
    <div class="row m-1">
        <div class="col-2 h5">Notes</div>
        <div class="col">
            <pre>{{ item.notes }}</pre>
        </div>
    </div>
</div>
<div class="mb-5 py-4">
    <a href="{{ path('app_todo_list') }}" class="btn btn-primary btn-lg px-4">Back</a>
</div>
{% endblock %}
